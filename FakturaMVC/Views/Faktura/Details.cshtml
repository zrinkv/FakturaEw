@model FakturaMVC.Models.Faktura

@{
    ViewBag.Title = "Podaci o fakturi";
}

<h2>Podaci o fakturi</h2>

<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BrojFakture)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BrojFakture)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatumStvaranja)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumStvaranja)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatumDospijeca)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatumDospijeca)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UkupnaCijenaBezPoreza)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UkupnaCijenaBezPoreza)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UkupnaCijenaSPorezom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UkupnaCijenaSPorezom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StvarateljRacuna)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StvarateljRacuna)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NazivPrimateljaRacuna)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazivPrimateljaRacuna)
        </dd>

    </dl>    
</div>

    @if (@Model.StavkeList != null)
    {        
        <h3>Stavke na fakturi</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.StavkeList[0].Opis)</th>
                        <th>@Html.DisplayNameFor(model => model.StavkeList[0].Kolicina)</th>
                        <th>@Html.DisplayNameFor(model => model.StavkeList[0].Cijena)</th>
                        <th>@Html.DisplayNameFor(model => model.StavkeList[0].UkupnaCijenaBezPoreza)</th>
                        <th>@Html.DisplayNameFor(model => model.StavkeList[0].Porez)</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < @Model.StavkeList.Count(); i++)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => model.StavkeList[i].Opis)</td>
                            <td>@Html.DisplayFor(model => model.StavkeList[i].Kolicina)</td>
                            <td>@Html.DisplayFor(model => model.StavkeList[i].Cijena)</td>
                            <td>@Html.DisplayFor(model => model.StavkeList[i].UkupnaCijenaBezPoreza)</td>
                            <td>@Html.DisplayFor(model => model.StavkeList[i].Porez)%</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

<p>    
    @Html.ActionLink("Nazad na pregled faktura", "Index")
</p>
